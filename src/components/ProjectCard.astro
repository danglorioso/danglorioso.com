---
interface Props {
  slug: string;
  title: string;
  description: string;
  status: "completed" | "in-progress" | "planned" | "archived";
  technologies: string[];
  category?: string;
  featured?: boolean;
  githubUrl?: string;
  liveUrl?: string;
  imageUrl?: string;
  favicon?: string;
  priority?: number;
  achievements?: string[];
  startDate: string;
  endDate?: string;
}

const {
  slug="",
  title = "", 
  description = "", 
  status = "in-progress", 
  technologies = [], 
  featured = false,
  favicon,
  githubUrl, 
  liveUrl,
  startDate = "",
  endDate 
} = Astro.props;

// Status styling
const statusConfig = {
  completed: { 
    bg: 'bg-status-success-bg', 
    text: 'text-status-success-text', 
    border: 'border-status-success-border',
    label: 'Completed' 
  },
  'in-progress': { 
    bg: 'bg-status-info-bg', 
    text: 'text-status-info-text', 
    border: 'border-status-info-border',
    label: 'In Progress' 
  },
  planned: { 
    bg: 'bg-status-warning-bg', 
    text: 'text-status-warning-text', 
    border: 'border-status-warning-border',
    label: 'Planned' 
  },
  archived: { 
    bg: 'bg-status-neutral-bg', 
    text: 'text-status-neutral-text', 
    border: 'border-status-neutral-border',
    label: 'Archived' 
  }
};

const currentStatus = statusConfig[status] || statusConfig['in-progress'];
---

<div class="bg-bg-card backdrop-blur-sm border border-border-primary rounded-lg flex flex-col p-4 gap-3 hover:border-border-accent transition-all duration-200">
  
  <!-- Header with Favicon, Title and Status -->
  <a href={``} class="group block cursor-pointer">
    <div class="flex items-center justify-between mb-3"> <!-- mb-3 workaround to account for gap-3 not working with <a> tag -->
      <div class="flex flex-1 items-center gap-3 min-w-0">
        
        <!-- Favicon -->
        {favicon && (
          <img 
            src={`/favicons/${favicon}`} 
            alt={`${title} favicon`}
            class="w-6 h-6 flex-shrink-0 rounded-sm"
            loading="lazy"
            onerror="this.style.display='none'"
          />
        )}
        <h3 class="text-2xl font-semibold text-text-primary group-hover:text-accent-primary transition-colors flex-1">
          {title}
        </h3>
      </div>

      <!-- Featured Star -->
      {featured && (
          <svg class="w-4 h-4 fill-current" viewBox="0 0 20 20" aria-label="Featured">
            <title>Featured</title>
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
          </svg>
      )}

      <!-- Status Badge -->
      <span class={`px-2 py-1 rounded text-sm font-medium border ${currentStatus.bg} ${currentStatus.text} ${currentStatus.border} whitespace-nowrap ml-2 flex-shrink-0`}>
        {currentStatus.label}
      </span>
    </div>
        
    <!-- Description -->
    <p class="text-text-secondary text-md leading-relaxed">
      {description}
    </p>
  </a>

  <!-- Tech Stack -->
  <div class="flex flex-wrap gap-2">
    {technologies.map((tech) => (
      <span class="px-2 py-1 bg-bg-overlay text-text-tertiary text-sm rounded-md border border-border-tertiary">
        {tech}
      </span>
    ))}
  </div>

  <!-- Timeline & Links -->
  <div class="flex justify-between items-center text-xs text-text-secondary border-t border-border-secondary pt-4">
    <!-- Date -->
    <span class=""text-sm text-text-secondary>
      {new Date(startDate).toLocaleDateString('en-US', { month: 'short', year: 'numeric' })}
      {endDate && ` â€” ${new Date(endDate).toLocaleDateString('en-US', { month: 'short', year: 'numeric' })}`}
    </span>

    <!-- Source and Live Links  -->
    {(githubUrl || liveUrl) && (
      <div class="flex items-center gap-3">
        {githubUrl && (
          <a 
            href={githubUrl} 
            target="_blank" 
            rel="noopener noreferrer"
            class="flex items-center gap-1.5 text-xs text-text-secondary hover:text-accent-primary transition-colors"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"></path>
            </svg>
            <span>Source</span>
          </a>
        )}
        {liveUrl && (
          <a 
            href={liveUrl} 
            target="_blank" 
            rel="noopener noreferrer"
            class="flex items-center gap-1.5 text-xs text-text-secondary hover:text-accent-primary transition-colors"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
            </svg>
            <span>Live</span>
          </a>
        )}
      </div>
    )}
  </div>
</div>
