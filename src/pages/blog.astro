---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';

// Get all blog posts that aren't drafts and sort by date (with newest first)
const allPosts = await getCollection('blog', ({ data }) => {
  return data.draft !== true;
});

const blogPosts = allPosts.sort((a, b) => {
  return b.data.pubDate.getTime() - a.data.pubDate.getTime();
}).map(post => ({
  id: post.slug,
  title: post.data.title,
  excerpt: post.data.description,
  date: post.data.pubDate,
  tags: post.data.tags,
  slug: post.slug,
  category: post.data.category,
  featured: post.data.featured
}));

// Format date function - works directly with the Date object from frontmatter
const formatDate = (date: Date) => {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
    timeZone: 'UTC' // Force UTC to avoid timezone shifts
  });
};
---

<Layout title="Blog" description="Thoughts on tech, development, and computer science">

  <main class="flex-grow relative z-10">
    <div class="max-w-6xl mx-auto px-8 py-12">
      
      <!-- Page Header -->
      <section class="mb-8">
        <h1 class="text-4xl md:text-5xl font-bold text-white">
          Blog
        </h1>
      </section>

      <!-- Divider -->
      <div class="mb-8 border-t border-slate-700/50"></div>

      <!-- Blog Posts Timeline -->
      <section class="space-y-4">
        {blogPosts.map((post, index) => (
          <article class="group">
            <div class="space-y-4">
              <!-- Post Title -->
              <h2 class="text-2xl md:text-3xl font-bold text-white leading-tight">
                <a 
                  href={`/blog/${post.slug}`} 
                  class="hover:text-blue-400 transition-colors duration-200"
                >
                  {post.title}
                </a>
              </h2>

              <!-- Tags -->
              <div class="flex flex-wrap gap-2">
                {(post.tags ?? []).map(tag => (
                  <span class="px-2 py-1 text-xs font-medium text-blue-400 bg-blue-400/10 border border-blue-400/20 rounded hover:bg-blue-400/20 transition-colors duration-200 uppercase tracking-wide">
                    {tag}
                  </span>
                ))}
              </div>

              <!-- Excerpt -->
              <p class="text-gray-300 leading-relaxed text-lg">
                {post.excerpt} 
                <a 
                  href={`/blog/${post.slug}`}
                  class="text-blue-400 hover:text-blue-300 ml-2 inline-flex items-center transition-colors duration-200"
                >
                  Read more
                  <svg class="w-3 h-3 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </a>
              </p>

              <!-- Meta Information -->
              <div class="flex items-center space-x-4 text-sm text-gray-400">
                <time datetime={post.date.toISOString().split('T')[0]}>{formatDate(post.date)}</time>
              </div>
            </div>

            <!-- Divider (except for last post) -->
            {index < blogPosts.length - 1 && (
              <div class="my-8 border-t border-slate-700/50"></div>
            )}
          </article>
        ))}
      </section>

      <!-- Newsletter Signup -->
      <section class="my-8 pt-16 border-t border-slate-700/50">
        <div class="text-center">
          <h3 class="text-3xl font-bold text-white mb-4">Subscribe to the newsletter</h3>
          <p class="text-gray-300 mb-8 max-w-md mx-auto">
            Get notified when I publish new posts about development, computer science, and technology.
          </p>
          
          <form class="flex flex-col sm:flex-row gap-3 max-w-md mx-auto">
            <input 
              type="email" 
              placeholder="Email address" 
              class="flex-1 bg-slate-800/60 backdrop-blur-sm border border-slate-600/50 text-white placeholder:text-gray-400 rounded-md px-4 py-3 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200"
              required
            />
            <button 
              type="submit"
              class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded-md transition-all duration-200 hover:scale-105"
            >
              Sign up
            </button>
          </form>
        </div>
      </section>
    </div>
  </main>

</Layout>

<style>
  /* Custom hover effects */
  article.group:hover h2 a {
    color: rgb(96 165 250);
  }

  /* Smooth transitions for all interactive elements */
  a, button {
    transition: all 0.2s ease;
  }

  /* Focus styles for accessibility */
  input:focus,
  button:focus,
  a:focus {
    outline: 2px solid rgb(59 130 246);
    outline-offset: 2px;
  }

</style>
