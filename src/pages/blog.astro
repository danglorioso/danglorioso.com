---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';

// Get all blog posts that aren't drafts and sort by date (with newest first)
const allPosts = await getCollection('blog', ({ data }) => {
  return data.draft !== true;
});

const blogPosts = allPosts.sort((a, b) => {
  return b.data.pubDate.getTime() - a.data.pubDate.getTime();
}).map(post => ({
  id: post.slug,
  title: post.data.title,
  excerpt: post.data.description,
  date: post.data.pubDate,
  tags: post.data.tags,
  slug: post.slug,
  category: post.data.category,
  featured: post.data.featured
}));

// Format date function - works directly with the Date object from frontmatter
const formatDate = (date: Date) => {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
    timeZone: 'UTC' // Force UTC to avoid timezone shifts
  });
};
---

<Layout title="Blog" description="Thoughts on tech, development, and computer science">
  <section id="blog">
    <div class="h-full w-full flex flex-col gap-6">
      <!-- Page Header -->
      <section class="">
        <h1 class="text-4xl font-bold">
          Blog
        </h1>
      </section>

      <div class="flex flex-col gap-6">
        {blogPosts.map((post, index) => (
          <a href={`/blog/${post.slug}`} class="block group">
            <article class="bg-slate-900/80 backdrop-blur-sm border border-slate-700/80 rounded-lg flex flex-col p-4 gap-3 hover:border-accent-primary/50 transition-all duration-200 cursor-pointer">
              <!-- Post Title and Date -->
              <div class="flex items-center justify-between gap-4">
                <h2 class="text-2xl font-semibold group-hover:text-accent-primary transition-colors flex-1">
                  {post.title}
                </h2>
                <time datetime={post.date.toISOString().split('T')[0]} class="text-sm text-slate-400 whitespace-nowrap flex-shrink-0">
                  {formatDate(post.date)}
                </time>
              </div>

              <!-- Excerpt -->
              <p class="text-slate-400 text-md leading-relaxed">
                {post.excerpt}
              </p>

              <!-- Tags -->
              <div class="flex flex-wrap gap-2">
                {(post.tags ?? []).map(tag => (
                  <span class="px-2 py-1 bg-slate-800/60 text-slate-300 text-sm rounded-md border border-slate-600/50 uppercase tracking-wide">
                    {tag}
                  </span>
                ))}
              </div>
            </article>
          </a>
        ))}
      </div>

      <!-- Newsletter Signup -->
      <section class="mt-8 pt-16 border-t border-slate-700/50">
        <div class="text-center">
          <h3 class="text-3xl font-bold text-white mb-4">Subscribe to the newsletter</h3>
          <p class="text-gray-300 mb-8 max-w-md mx-auto">
            Get notified when I publish new posts about development, computer science, and technology.
          </p>
          
          <form class="flex flex-col sm:flex-row gap-3 max-w-md mx-auto">
            <input 
              type="email" 
              placeholder="Email address" 
              class="flex-1 bg-slate-800/60 backdrop-blur-sm border border-slate-600/50 text-white placeholder:text-gray-400 rounded-md px-4 py-3 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200"
              required
            />
            <button 
              type="submit"
              class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded-md transition-all duration-200 hover:scale-105"
            >
              Sign up
            </button>
          </form>
        </div>
      </section>
    </div>
  </section>
</Layout>

<style>
  /* Custom hover effects */
  article.group:hover h2 a {
    color: rgb(96 165 250);
  }

  /* Smooth transitions for all interactive elements */
  a, button {
    transition: all 0.2s ease;
  }

  /* Focus styles for accessibility */
  input:focus,
  button:focus,
  a:focus {
    outline: 2px solid rgb(59 130 246);
    outline-offset: 2px;
  }

</style>
