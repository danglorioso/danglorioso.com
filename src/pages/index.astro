---
import Layout from '../layouts/Homepage.astro';
// import Header from '../components/HeaderNew.astro';
import Footer from "../components/Footer.tsx";
import Hero from "../components/ComingSoon.astro";
import Monogram from '../components/Monogram.astro';
import SocialIcons from '../components/SocialIcons.tsx';
---

<Layout title="Dan Glorioso" description="CS Student @ Tufts">
	<header class="w-full py-4 border-b border-gray-800 bg-slate-900/80 backdrop-blur-sm">
    <div class="max-w-7xl mx-auto px-8 flex items-center justify-between">
      
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="block w-20 h-12 sm:w-24 sm:h-14 hover:opacity-80 transition-opacity duration-200">
          <Monogram width="96px" height="56px" />
        </a>
      </div>

      <!-- Right Side: Social Icons + Mobile Menu -->
      <div class="flex items-center space-x-4">
        <!-- Social Icons (visible on all screens) -->
        <SocialIcons client:load />
      </div>
    </div>
  </header>

	<div class="flex-grow">
		<Hero />
	</div>

	<Footer />
</Layout>
