---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import Layout from '../../layouts/Plane2.astro';

export const prerender = true;

export async function getStaticPaths() {
  try {
    const posts = await getCollection('blog');
    // console.log('Posts found:', posts.length);
    
    return posts
      .filter(post => !post.data.draft)
      .map((post) => ({
        params: { slug: post.slug },
        props: { post },
      }));
  } catch (error) {
    console.error('Error in getStaticPaths:', error);
    return [];
  }
}

type Props = {
  post: CollectionEntry<'blog'>;
};

const { post } = Astro.props;
const { Content } = await post.render();

// Get related posts (excluding current post)
const allPosts = await getCollection('blog');
const relatedPosts = allPosts
  .filter(p => p.slug !== post.slug && !p.data.draft)
  .slice(0, 3);

// Format date function
const formatDate = (date: Date) => {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};
---

<Layout title={post.data.title}>  

  <main class="min-h-screen pt-24 pb-16">
    <div class="max-w-4xl mx-auto px-6">
      <!-- Back to blog -->
      <div class="mb-8">
        <a 
          href="/blog" 
          class="inline-flex items-center text-slate-400 hover:text-blue-400 transition-colors duration-200"
        >
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Back to Blog
        </a>
      </div>

      <!-- Article header -->
      <header class="mb-12">
        <div class="mb-4">
          <span class="inline-block px-3 py-1 text-xs font-medium text-blue-400 bg-blue-400/10 rounded-full">
            {post.data.category}
          </span>
        </div>
        
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-6 leading-tight">
          {post.data.title}
        </h1>
        
        <p class="text-xl text-slate-300 mb-6">
          {post.data.description}
        </p>
        
        <div class="flex flex-wrap items-center gap-4 text-sm text-slate-400">
          <time>{formatDate(post.data.pubDate)}</time>
          <span>•</span>
          <span>{post.data.readTime}</span>
          {post.data.updatedDate && (
            <>
              <span>•</span>
              <span>Updated {formatDate(post.data.updatedDate)}</span>
            </>
          )}
        </div>
        
        <!-- Tags -->
        <div class="flex flex-wrap gap-2 mt-6">
          {post.data.tags.map((tag: string) => (
            <span class="px-2 py-1 text-xs text-slate-300 bg-slate-700/50 rounded">
              #{tag}
            </span>
          ))}
        </div>
      </header>

      <!-- Article content -->
      <article class="blog-content max-w-none mb-16">
        <Content />
      </article>

      <!-- Share buttons -->
      <div class="border-t border-slate-700 mt-12 pt-8 mb-12">
        <h3 class="text-lg font-semibold text-white mb-4">Share this post</h3>
        <div class="flex gap-4">
          <a
            href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(post.data.title)}&url=${encodeURIComponent(`https://danglorioso.com/blog/${post.slug}`)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center px-4 py-2 text-sm font-medium text-slate-300 bg-slate-700/50 hover:bg-slate-600/50 rounded-lg transition-colors duration-200"
          >
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
            </svg>
            Share on Twitter
          </a>
          
          <a
            href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(`https://danglorioso.com/blog/${post.slug}`)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center px-4 py-2 text-sm font-medium text-slate-300 bg-slate-700/50 hover:bg-slate-600/50 rounded-lg transition-colors duration-200"
          >
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
            Share on LinkedIn
          </a>
        </div>
      </div>

      <!-- Related posts -->
      {relatedPosts.length > 0 && (
        <section class="border-t border-slate-700 pt-12 mt-12">
          <h2 class="text-2xl font-bold text-white mb-8 flex items-center">
            <span class="w-3 h-3 bg-purple-500 rounded-full mr-3"></span>
            Related Posts
          </h2>
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            {relatedPosts.map((relatedPost) => (
              <article class="bg-slate-800/50 rounded-lg p-6 hover:bg-slate-700/50 transition-colors duration-200">
                <div class="mb-3">
                  <span class="inline-block px-2 py-1 text-xs font-medium text-blue-400 bg-blue-400/10 rounded">
                    {relatedPost.data.category}
                  </span>
                </div>
                <h3 class="text-lg font-semibold text-white mb-2">
                  <a href={`/blog/${relatedPost.slug}`} class="hover:text-blue-400 transition-colors duration-200">
                    {relatedPost.data.title}
                  </a>
                </h3>
                <p class="text-slate-400 text-sm mb-3">
                  {relatedPost.data.description}
                </p>
                <div class="text-xs text-slate-500">
                  {formatDate(relatedPost.data.pubDate)}
                </div>
              </article>
            ))}
          </div>
        </section>
      )}

      <!-- Back to blog -->
      <div class="text-center mt-12">
        <a 
          href="/blog" 
          class="inline-flex items-center px-6 py-3 text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 rounded-lg transition-colors duration-200"
        >
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Back to All Posts
        </a>
      </div>
    </div>
  </main>

</Layout>

<style>
  /* Advanced Blog Content Styling - Optimized for Technical Markdown */
  .blog-content {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    color: rgb(203 213 225);
    line-height: 1.75;
    font-size: 1.125rem;
  }

  /* Typography Hierarchy */
  .blog-content h1 {
    font-size: 2.5rem;
    font-weight: 800;
    color: rgb(248 250 252);
    margin: 3rem 0 1.5rem 0;
    line-height: 1.2;
    letter-spacing: -0.02em;
    background: linear-gradient(135deg, rgb(96 165 250), rgb(147 51 234));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .blog-content h1:first-child {
    margin-top: 0;
  }

  .blog-content h2 {
    font-size: 2rem;
    font-weight: 700;
    color: rgb(248 250 252);
    margin: 2.5rem 0 1.25rem 0;
    line-height: 1.3;
    letter-spacing: -0.01em;
    position: relative;
    padding-bottom: 0.75rem;
    border-bottom: 2px solid rgb(51 65 85);
  }

  .blog-content h2::before {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 60px;
    height: 2px;
    background: linear-gradient(90deg, rgb(96 165 250), rgb(147 51 234));
  }

  .blog-content h3 {
    font-size: 1.5rem;
    font-weight: 600;
    color: rgb(248 250 252);
    margin: 2rem 0 1rem 0;
    line-height: 1.4;
  }

  .blog-content h4 {
    font-size: 1.25rem;
    font-weight: 600;
    color: rgb(226 232 240);
    margin: 1.75rem 0 0.875rem 0;
    line-height: 1.4;
  }

  .blog-content h5,
  .blog-content h6 {
    font-size: 1.125rem;
    font-weight: 600;
    color: rgb(203 213 225);
    margin: 1.5rem 0 0.75rem 0;
    line-height: 1.4;
  }

  /* Paragraph Styling */
  .blog-content p {
    margin: 1.75rem 0;
    line-height: 1.8;
    color: rgb(203 213 225);
    text-align: justify;
    hyphens: auto;
    word-spacing: 0.05em;
  }

  .blog-content p:first-child {
    margin-top: 0;
  }

  /* Enhanced Lists */
  .blog-content ul,
  .blog-content ol {
    margin: 1.75rem 0;
    padding-left: 0;
  }

  .blog-content ul {
    list-style: none;
  }

  .blog-content ul li {
    position: relative;
    margin: 0.75rem 0;
    padding-left: 1.75rem;
    line-height: 1.7;
    color: rgb(203 213 225);
  }

  .blog-content ul li::before {
    content: '•';
    position: absolute;
    left: 0;
    color: rgb(96 165 250);
    font-weight: bold;
    font-size: 1.2em;
  }

  .blog-content ol {
    counter-reset: item;
    list-style: none;
  }

  .blog-content ol li {
    position: relative;
    margin: 0.75rem 0;
    padding-left: 2rem;
    line-height: 1.7;
    color: rgb(203 213 225);
    counter-increment: item;
  }

  .blog-content ol li::before {
    content: counter(item);
    position: absolute;
    left: 0;
    top: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 1.5rem;
    height: 1.5rem;
    background: rgb(96 165 250);
    color: white;
    border-radius: 50%;
    font-size: 0.75rem;
    font-weight: 600;
  }

  /* Superior Code Styling */
  .blog-content code {
    font-family: 'JetBrains Mono', 'Fira Code', 'SF Mono', 'Monaco', 'Consolas', monospace;
    font-size: 0.9em;
    color: rgb(248 250 252);
    background: rgb(30 41 59);
    padding: 0.25rem 0.5rem;
    border-radius: 0.375rem;
    border: 1px solid rgb(51 65 85);
    font-weight: 500;
    letter-spacing: -0.01em;
  }

  .blog-content pre {
    background: rgb(15 23 42) !important;
    border: 1px solid rgb(51 65 85);
    border-radius: 0.75rem;
    padding: 1.5rem;
    margin: 2.5rem 0;
    overflow-x: auto;
    position: relative;
    box-shadow: 
      0 20px 25px -5px rgb(0 0 0 / 0.1),
      0 10px 10px -5px rgb(0 0 0 / 0.04),
      inset 0 1px 0 rgb(71 85 105 / 0.1);
  }

  .blog-content pre::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgb(96 165 250), transparent);
  }

  .blog-content pre code {
    background: transparent;
    border: none;
    padding: 0;
    color: rgb(226 232 240);
    font-size: 0.875rem;
    line-height: 1.7;
    font-weight: 400;
  }

  /* Enhanced Blockquotes */
  .blog-content blockquote {
    position: relative;
    margin: 2.5rem 0;
    padding: 1.5rem 1.5rem 1.5rem 2rem;
    background: linear-gradient(135deg, rgb(30 41 59 / 0.8), rgb(51 65 85 / 0.4));
    border-left: 4px solid rgb(96 165 250);
    border-radius: 0.5rem;
    font-style: italic;
    color: rgb(226 232 240);
    backdrop-filter: blur(8px);
  }

  .blog-content blockquote::before {
    content: '"';
    position: absolute;
    top: -0.5rem;
    left: 1rem;
    font-size: 3rem;
    color: rgb(96 165 250);
    font-family: serif;
    line-height: 1;
  }

  .blog-content blockquote p {
    margin: 0;
    font-size: 1.1em;
    line-height: 1.6;
  }

  /* Link Enhancement */
  .blog-content a {
    color: rgb(96 165 250);
    text-decoration: none;
    font-weight: 500;
    position: relative;
    transition: all 0.3s ease;
  }

  .blog-content a::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, rgb(96 165 250), rgb(147 51 234));
    transition: width 0.3s ease;
  }

  .blog-content a:hover {
    color: rgb(147 197 253);
  }

  .blog-content a:hover::after {
    width: 100%;
  }

  /* Enhanced Tables */
  .blog-content table {
    width: 100%;
    border-collapse: collapse;
    margin: 2.5rem 0;
    border-radius: 0.75rem;
    overflow: hidden;
    box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1);
    background: rgb(30 41 59);
  }

  .blog-content th,
  .blog-content td {
    padding: 1rem 1.25rem;
    text-align: left;
    border-bottom: 1px solid rgb(51 65 85);
    line-height: 1.5;
  }

  .blog-content th {
    background: linear-gradient(135deg, rgb(51 65 85), rgb(71 85 105));
    font-weight: 600;
    color: rgb(248 250 252);
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .blog-content td {
    color: rgb(203 213 225);
  }

  .blog-content tr:hover {
    background: rgb(51 65 85 / 0.3);
  }

  .blog-content tr:last-child td {
    border-bottom: none;
  }

  /* Image Enhancement */
  .blog-content img {
    max-width: 100%;
    height: auto;
    margin: 2.5rem auto;
    display: block;
    border-radius: 0.75rem;
    box-shadow: 
      0 25px 50px -12px rgb(0 0 0 / 0.25),
      0 0 0 1px rgb(71 85 105 / 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .blog-content img:hover {
    transform: scale(1.02);
    box-shadow: 
      0 32px 64px -12px rgb(0 0 0 / 0.35),
      0 0 0 1px rgb(96 165 250 / 0.2);
  }

  /* Horizontal Rules */
  .blog-content hr {
    border: none;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgb(51 65 85), transparent);
    margin: 3rem 0;
  }

  /* Strong and Emphasis */
  .blog-content strong {
    font-weight: 700;
    color: rgb(248 250 252);
  }

  .blog-content em {
    font-style: italic;
    color: rgb(226 232 240);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .blog-content {
      font-size: 1rem;
    }
    
    .blog-content h1 {
      font-size: 2rem;
    }
    
    .blog-content h2 {
      font-size: 1.75rem;
    }
    
    .blog-content h3 {
      font-size: 1.375rem;
    }
    
    .blog-content pre {
      padding: 1rem;
      margin: 1.5rem 0;
    }
    
    .blog-content pre code {
      font-size: 0.8rem;
    }
  }
</style>
