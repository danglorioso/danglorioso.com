                    <h3 class="text-xl font-bold text-white group-hover:text-blue-400 transition-colors duration-200">
                      <a href={`/projects/${project.slug}`}>
                        {project.title}
                      </a>
                    </h3>
                    <span class={`px-3 py-1 text-xs font-medium border rounded-full ${getStatusStyle(project.status)} uppercase tracking-wide`}>
                      {project.status.replace('-', ' ')}
                    </span>
                  </div>
                  
                  <span class="inline-block px-3 py-1 text-xs font-medium text-purple-400 bg-purple-400/10 border border-purple-400/20 rounded-full mb-3">
                    {project.category}
                  </span>
                </div>

                <!-- Description -->
                <p class="text-slate-300 leading-relaxed mb-4">
                  {project.description}
                </p>

                <!-- Technologies -->
                <div class="flex flex-wrap gap-2 mb-4">
                  {project.technologies.slice(0, 4).map(tech => (
                    <span class="px-2 py-1 text-xs text-slate-300 bg-slate-700/50 rounded border border-slate-600/50">
                      {tech}
                    </span>
                  ))}
